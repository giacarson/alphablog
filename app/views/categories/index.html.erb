<section class="container">
	<h1 align="center">Listing all categories</h1>

	<div align="center">
		<%= will_paginate %>
	</div>

<div class="listing">


	<article>
		<div class="row">

			<% @categories.each do |category| %>
					<div class="well well-sm col-md-3 col-md-offset-1">
						<h2><%= link_to "#{category.name}", category_path(category) %></h2>
						<p><%= pluralize(category.articles.count, "article") %></p>
					</div>
				<% end %>
		</div>
	</article>
</div>

	<div align="center">
		<%= will_paginate %>
	</div>

</section>
