<nav>
	<ul>
		<li><%= link_to_unless_current("Home", root_path) %></li>
		<li><%= link_to_unless_current("About", about_path) %></li>
		<li class="dropdown">
			<a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">AlphaBlog<span class="caret"></span></a>
			<ul class="dropdown-menu">
			<li><%= link_to_unless_current("Users", users_path) %></li>
			<li><%= link_to_unless_current("Articles", articles_path) %></li>
			<li><%= link_to_unless_current "Categories", categories_path %></li>
			</ul>
		</li>
		<% if logged_in? %>
			<li class="dropdown">
				<a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Your Articles<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li><%= link_to 'Create New', new_article_path %></li>
					<li><%= link_to 'Your Articles', user_path(current_user) %></li>
				</ul>
			</li>
			<li class="dropdown">
				<a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username if logged_in? %><span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li><%= link_to 'View Profile', user_path(current_user) %></li>
					<li><%= link_to 'Edit Profile', edit_user_path(current_user) %></li>
					<li><%= link_to 'Logout', logout_path, method: :delete %></li>
				</ul>
