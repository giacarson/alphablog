<section>
	<h1>All the AlphaBloggers</h1>

	<%= will_paginate %>

	<% @users.each do |user| %>

		<ul class="show-users  col-md-3">
			<div class="user-block">
				<li class="grav"><%= link_to gravatar_for(user), user_path(user) %></li>
				<li><%= link_to user.username, user_path(user) %></li>
				<li><%= pluralize(user.articles.count, "article") if user.articles %></li>
				<% if logged_in? and current_user.admin? %>
					<li><%= link_to "Delete User", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and their articles?"} %></li>
				<% end %>
			</div>
		</ul>

	<% end %>

	<%= will_paginate %>
</section>