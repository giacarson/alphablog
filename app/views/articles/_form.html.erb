<%= render 'shared/errors', obj: @article %>

<div class="form group">
	<%= form_for @article do |f| %>

		<div class="col-md-8">
			<p>
				<%= f.label :title %><br/>
				<%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
			</p>
		</div>
		<div class="col-md-8">
			<p>
				<%= f.label :description %><br/>
				<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Article Content" %>
			</p>
		</div>
			<div class="col-md-8">
				<btn>
					<%= f.submit class: 'btn btn-primary btn-md'%>
				</btn>

				<btn>
					<%= link_to "Cancel", articles_path, class: 'btn btn-primary btn-md' %>
				</btn>
			</div>
		</div>
	<% end %>
</div>